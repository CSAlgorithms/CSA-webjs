<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label for="title">Website name</label>
                <input type="text" value="{{g_webName}}" name="webName" class="form-control" id="title" placeholder="Enter website name">
            </div>

            <div class="form-group">
                <label for="contactEmail">Contact email</label>
                <input type="text" value="{{g_contactEmail}}" name="contactEmail" class="form-control" id="contactEmail" placeholder="Enter email">
                <small id="fileHelp" class="form-text text-muted">
                    Entered email will be displayed on password reset page
                </small>
            </div>

            <div class="form-group">
                <label for="notification">System notification</label>
                <input type="text" value="{{g_notification}}" name="notification" class="form-control" id="notification"
                       placeholder="System notification">
                <small id="fileHelp" class="form-text text-muted">
                    All website visitors will see this message
                </small>
            </div>

            <div class="form-group">
                <label for="submission-type">Submission type</label>
                <select name="submissionType" class="form-control" id="submission-type">
                    <option value="{{g_constant.SUBMIT_TYPE_MANUAL}}" {{# equals g_submissionType g_constant.SUBMIT_TYPE_MANUAL}}selected{{/equals}}>Manual verification</option>
                    <option value="{{g_constant.SUBMIT_TYPE_COMPARE}}" {{# equals g_submissionType g_constant.SUBMIT_TYPE_COMPARE}}selected{{/equals}}>Output comparison</option>
                    <option value="{{g_constant.SUBMIT_TYPE_DOCKER}}" {{# equals g_submissionType g_constant.SUBMIT_TYPE_DOCKER}}selected{{/equals}}>Docker</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
