<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label for="title">Website name</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Enter website name">
            </div>

            <div class="form-group">
                <label for="title">Contact email</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Enter email">
                <small id="fileHelp" class="form-text text-muted">
                    Entered email will be displayed on password reset page
                </small>
            </div>

            <div class="form-group">
                <label for="note">System notification</label>
                <input type="text" name="note" class="form-control" id="note" placeholder="System notification">
                <small id="fileHelp" class="form-text text-muted">
                    All website visitors will see this message
                </small>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
