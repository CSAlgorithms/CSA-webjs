<div class="row">
    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-dark o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-gears"></i>
                </div>
                <div class="mr-5">Website configuration</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/admin/config">
                <span class="float-left"><li class="fa fa-pencil"></li> Edit website configuration</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-info o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-question"></i>
                </div>
                <div class="mr-5">{{questionsCount}} questions</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/question/add">
                <span class="float-left"><li class="fa fa-plus"></li> Add question</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-calendar"></i>
                </div>
                <div class="mr-5">{{eventsCount}} events</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/event/add">
                <span class="float-left"><li class="fa fa-plus"></li> Add event</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-user"></i>
                </div>
                <div class="mr-5">{{usersCount}} users</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/user">
                <span class="float-left"><li class="fa fa-eye"></li> View all users</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-secondary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-code"></i>
                </div>
                <div class="mr-5">Programming languages</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/language/">
                <span class="float-left"><li class="fa fa-eye"></li> View all languages</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fa fa-fw fa-check-circle"></i>
                </div>
                <div class="mr-5">Pending submissions</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="/submission/pending">
                <span class="float-left"><li class="fa fa-eye"></li> View pending submissions</span>
                <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
            </a>
        </div>
    </div>
</div>
