<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Start at</th>
                    <th>End at</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{# each events}}
                    <tr>
                        <td>{{this.eid}}</td>
                        <td>{{this.title}}</td>
                        <td>{{formatDateTime this.startAt "llll"}}</td>
                        <td>{{formatDateTime this.endAt "llll"}}</td>
                        <td>{{eventStatus this.startAt this.endAt}}</td>
                        <td><a href="/event/view/{{this.eid}}">view</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
