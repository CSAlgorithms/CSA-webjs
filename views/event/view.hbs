<div class="card">
    <div class="card-body">
        <h3 class="card-title">{{event.eid}} - {{event.title}}</h3>
        <h4 class="card-title">{{formatDateTime event.startAt 'llll'}} - {{formatDateTime event.endAt 'llll'}}</h4>
        <div class="row">
            <div class="col-12">
                {{{event.description}}}
            </div>
        </div>

        <div class="row" style="padding-top: 20px">
            <div class="col-12">
                <h3 class="card-title">Questions</h3>
                <ul class="list-group">
                    <li class="list-group-item">Question 1</li>
                    <li class="list-group-item">Question 2</li>
                    <li class="list-group-item">Question 3</li>
                </ul>
            </div>
        </div>

        <div class="row" style="padding-top: 20px">
            <div class="col-12">
                <a class="btn btn-primary" href="/event/join/1">Join / Leave</a>
                <small id="fileHelp" class="form-text text-muted">
                    If you leave an event your score wil lbe reset to zero
                </small>
            </div>
        </div>
    </div>
</div>
