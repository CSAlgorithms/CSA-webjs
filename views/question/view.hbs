<div class="card">
    <div class="card-body">
        <h3 class="card-title">{{question.qid}} - {{question.title}}</h3>
        <div class="row">
            <div class="col-12">
                {{{question.description}}}
            </div>
        </div>

        <form style="padding-top: 50px" method="post" action="/submission/submit/{{question.qid}}">
            <h4 class="card-title">Code</h4>
            <div class="form-group">
                <label for="sel1">Programming language:</label>
                <select class="form-control" id="sel1">
                    <option>Java</option>
                    <option>C</option>
                    <option>C++</option>
                    <option>Python 2</option>
                </select>
            </div>

            <div class="col-12 editor-container">
                <input name="question" type="hidden" value="{{question._id}}">
                <textarea id="editor-textarea" name="code" style="display: none;"></textarea>
                <div id="editor"></div>
            </div>

            <div class="col-12 editor-btn">
                <button type="submit" class="btn btn-primary">Batch test</button>
                <button type="submit" class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
</div>
