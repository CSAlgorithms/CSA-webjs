<div class="card">
    <div class="card-body">
        <h3 class="card-title">{{question.qid}} - {{question.title}}</h3>
        <div class="row">
            <div class="col-12">
                {{{question.description}}}
            </div>
        </div>

        {{# equals g_submissionType g_constant.SUBMIT_TYPE_MANUAL}}
            {{# if languages}}
                <form style="padding-top: 50px" method="post" action="/submission/submit/{{question.qid}}">
                    <h4 class="card-title">Code</h4>
                    <div class="form-group">
                        <label for="language">Programming language</label>
                        <select name="language" class="form-control" id="language">
                            {{# each languages}}
                                <option value="{{this._id}}">{{this.displayName}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-12 editor-container">
                        <textarea id="editor-textarea" name="code" style="display: none;"></textarea>
                        <div id="editor"></div>
                    </div>

                    <div class="col-12 editor-btn">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            {{else}}
                <p><em>You cannot submit a solution because no programming language is available in the system</em></p>
            {{/if}}
        {{/equals}}
    </div>
</div>
