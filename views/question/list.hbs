<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Submitted</th>
                    <th>Accepted</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{# each questions}}
                    <tr>
                        <td>{{this.qid}}</td>
                        <td>{{this.title}}</td>
                        <td></td>
                        <td></td>
                        <td><a href="question/view/{{this.qid}}">view</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
