<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th width="100">Rank</th>
                    <th>Username</th>
                    <th width="200">Score</th>
                </tr>
                </thead>
                <tbody>
                {{# each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{this.username}}</td>
                        <td>{{this.score}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
