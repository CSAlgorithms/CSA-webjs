<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th width="100">ID</th>
                    <th>Username</th>
                    <th width="100"></th>
                    <th width="100"></th>
                </tr>
                </thead>
                <tbody>
                {{# each users}}
                    <tr>
                        <td>{{this.uid}}</td>
                        <td>{{this.username}}</td>
                        <td><a href="/user/edit/{{this.uid}}">edit</a></td>
                        <td><a href="/user/profile/{{this.uid}}">view</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
