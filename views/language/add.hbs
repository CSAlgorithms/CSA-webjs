<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label for="valueName">Value name</label>
                <input type="text" value="{{g_post.valueName}}" name="valueName" class="form-control" id="valueName" placeholder="Enter language unique value name">
            </div>
            <div class="form-group">
                <label for="displayName">Display name</label>
                <input type="text" value="{{g_post.displayName}}" name="displayName" class="form-control" id="displayName" placeholder="Enter language display name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
